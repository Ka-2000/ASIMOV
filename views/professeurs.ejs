<!DOCTYPE html>
<html lang="fr">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Epoka Web</title>
    
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

    <style>

        table {
          border-collapse: collapse;
          width: 100%;
        }

        th, td {
          text-align: left;
          padding: 8px;
        }

        th {
          background-color: #f2f2f2;
        }

        tr:nth-child(even) {
          background-color: #f2f2f2;
        }

        tr:hover {
          background-color: #ddd;
        }

    </style>

</head>

<body>

  <div class = "navbar navbar-expand-sm bg-dark navbar-dark sticky-top">

    <div class = "container-fluid">

      <ul class = "navbar-nav">

        <li class = "nav-item"><a class = "nav-link" href = "http://localhost:3600/logout"> Déconnexion </a></li>
        <li class = "nav-item"><a class = "nav-link" href = "http://localhost:3600/classes"> Classes </a></li>
        <li class = "nav-item"><a class = "nav-link active" href = "http://localhost:3600/professeurs"> Professeurs </a></li>
          
      </ul>

      <a class = "navbar-brand"> Principal </a>

    </div>
    
  </div>

  <div>

    <table>

      <thead>

        <tr>
          <th>Nom</th>
          <th>Prénom</th>
          <th>Matière</th>
          <th>Modification</th>
        </tr>

      </thead>

      <tbody>

        <% dataProfesseur.forEach(function(data){ %>

          <tr>
              
            <td><%= data.professeur_Nom %></td>
            <td><%= data.professeur_Prenom %></td>
            <td><%= data.professeur_Matiere %></td>
            <td><a href="http://localhost:3600/professeurs/modifierProfesseur/<%=data.professeur_Id%>"> Modifier </a></td>

          </tr>

        <% })%>

      </tbody>

    </table>

  </div>
      
</body>
</html>